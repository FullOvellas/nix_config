#!/usr/bin/env bash

set -euo pipefail
sudo -v

nix fmt

git --no-pager diff

run() {
    sudo nixos-rebuild \
        switch \
        --print-build-logs \
        --flake .# \
        "$@"
}

if which nom >/dev/null; then
    run --verbose \
        --log-format internal-json \
        "$@" \
    |& nom --json
else
    run "$@"
fi

notify-send "System update done"
